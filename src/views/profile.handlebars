<div>
    <div>
        <h1>Tu perfil</h1>
        <p>Nombre: {{user.first_name}} {{user.last_name}}</p>
        <p>Email: {{user.email}}</p>
        <p>Edad: {{user.age}}</p>

        <a href="/api/sessions/logout"><button>Cerrar sesión</button></a>
    </div>

    <div>
        {{#if cart}}
        <h2>Tu carrito</h2>
        {{#if cart.products.length}}
        {{#each cart.products}}
        <p>Nombre: {{this.title}}</p>
        <p>Precio: ${{this.price}}</p>
        <p>Cantidad: {{this.quantity}}</p>
        {{/each}}
        <a href=""><button>Finalizar compra</button></a>
        {{else}}
        <p>Tu carrito está vacío</p>
        {{/if}}
        {{else}}
        <p>No hay ningún carrito asociado a tu cuenta</p>
        {{/if}}
    </div>
</div>